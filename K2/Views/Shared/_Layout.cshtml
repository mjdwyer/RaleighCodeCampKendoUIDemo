<!DOCTYPE html>
<html>
	<head>
		<title>@ViewBag.Title</title>
	@* Styles *@
	@Styles.Render("~/Content/css")

	@* Fonts *@
	@Styles.Render("~/Content/fonts")

	@* JavaScript Libraries *@
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/modernizr")
	@Scripts.Render("~/bundles/kendo")

</head>
	<body>
		<header>
			<div class="content-wrapper">
				<div class="float-left">
					<p class="site-title">@Html.ActionLink("your logo here", "Index", "Home")</p>
				</div>
				<div class="float-right">
					<nav>
						<ul id="menu">
							<li>@Html.ActionLink("Grid1", "Grid1", "Home")</li>
							<li>@Html.ActionLink("Grid2", "Grid2", "Home")</li>
							<li>@Html.ActionLink("Chart", "Chart2", "Home")</li>
						</ul>
					</nav>
				</div>
			</div>
		</header>
		<div id="body">
			@RenderSection("featured", required: false)
			<section class="content-wrapper main-content clear-fix">
				@RenderBody()
			</section>
		</div>

		<footer>
			<div class="content-wrapper">
				<div class="float-left">
					<p>&copy; @DateTime.Now.Year - My Kendo ASP.NET MVC Application</p>
				</div>
			</div>
		</footer>
	</body>
</html>
